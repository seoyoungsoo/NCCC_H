<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelReservation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#F3F3F3"
        android:orientation="vertical">

        <include
            layout="@layout/hotel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="AI 호텔 맞춤 검색"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@drawable/search_topground"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:gravity="center_vertical|center_horizontal|bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아래 항목을 선택해주세요."
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:layout_marginBottom="50dp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/search_underground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5.7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/option_24dp" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="도시"
                            android:textSize="20dp"
                            android:textColor="#140000"
                            android:textStyle="bold"/>

                        <Spinner
                            android:id="@+id/hotel_reservation_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/option_24dp" />

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="여행객 타입"
                            android:textSize="20dp"
                            android:textColor="#140000"
                            android:textStyle="bold"/>
                        <Spinner
                            android:id="@+id/hotel_reservation_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dialog"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/option_24dp" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:text="평균 가격"
                            android:textSize="20dp"
                            android:textColor="#140000"
                            android:textStyle="bold"/>
                        <com.jaygoo.widget.RangeSeekBar
                            android:id="@+id/hotel_reservation_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:rsb_max="200"
                            app:rsb_mode="range"
                            app:rsb_tick_mark_layout_gravity="bottom"
                            app:rsb_tick_mark_text_margin="10dp"
                            app:rsb_progress_color="@color/colorProgress"
                            app:rsb_min_interval="50"
                            app:rsb_thumb_drawable="@drawable/thumb_yellow_stroke"
                            app:rsb_indicator_show_mode="alwaysShow"
                            app:rsb_indicator_height="25dp"
                            app:rsb_indicator_width="40dp"
                            app:rsb_indicator_margin="5dp"
                            app:rsb_indicator_background_color="@color/colorProgress"
                            app:rsb_tick_mark_mode="number"
                            app:rsb_tick_mark_text_array="@array/seekbarvalue" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.7">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">

                        <Button
                            android:id="@+id/hotel_reservation_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:text="취 소"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_shape_cancel"/>
                        <Button
                            android:id="@+id/hotel_reservation_search"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="검 색"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_shape_search"/>


                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>